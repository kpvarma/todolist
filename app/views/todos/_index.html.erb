
<%# Displays list of @todos %>
<div id="div_todo_collections">
	<% @todos.each do |todo| %>
		<div id="div_todo_<%= todo.id %>">
			<%= render :partial=>"item", :locals=>{:todo=>todo} %>
		</div>
	<% end %>
	<% if @todos.blank? %>
		<div id="div_todo_empty" class="box text-color-grey padding-80 text-align-center" style="height:200px;">
      <%= translate("forms.no_results_found") %>
		</div>
	<% end %>
</div>
<div class="cl"></div>

<% if @todos.any? %>
   <%= content_tag :div, :class=>"pull-right" do %>
     <%= paginate @todos, :remote => true %>
   <% end %>
<% end %>
<div class="cl"></div>
